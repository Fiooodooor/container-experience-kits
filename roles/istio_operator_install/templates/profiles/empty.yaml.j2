apiVersion: install.istio.io/v1alpha1
kind: IstioOperator
metadata:
  namespace: {{ istio_system_namespace }}
  name: {{ istio_deployment_name }}
  labels:
    version: {{ istio_release_version }}
spec:
  components:
    base:
      enabled: false
    pilot:
      enabled: false
    ingressGateways:
    - name: istio-ingressgateway
      enabled: false

