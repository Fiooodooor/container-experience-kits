[Unit]
Description=Intel BM RA SR-IOV configuration for QAT devices
AssertPathExists=/usr/local/bin/bmra_sriov_qat_init

[Service]
Environment=SRIOV_NUMVFS_MAPPINGS={{ sriov_config_path }}/bmra_sriov_qat_numvfs
Type=oneshot
ExecStartPre=/bin/sleep 10
ExecStart=/usr/local/bin/bmra_sriov_qat_init

[Install]
WantedBy=multi-user.target
