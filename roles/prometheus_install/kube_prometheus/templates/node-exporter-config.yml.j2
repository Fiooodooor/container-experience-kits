---
apiVersion: v1
kind: ConfigMap
metadata:
  name: node-exporter-config
  namespace: monitoring
data:
  web.yml: |
    tls_server_config:
      cert_file: "/etc/node-exporter/tls/tls.crt"
      key_file: "/etc/node-exporter/tls/tls.key"
    basic_auth_users:
      prometheus: {{ node_exporter_htpasswd.stdout[1:] }}
