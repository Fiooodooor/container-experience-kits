apiVersion: v1
kind: PersistentVolume
metadata:
  name: kube-prometheus-prometheus
  namespace: monitoring
  labels:
    name: kube-prometheus-prometheus
spec:
  capacity:
    storage: 20Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: kube-prometheus
  local:
    path: /etc/prometheus
  nodeAffinity:
    required:
      nodeSelectorTerms:
        - matchExpressions:
            - key: kubernetes.io/hostname
              operator: In
              values:
                - {{ hostvars[groups['kube-node'][0]]['ansible_hostname'] }}
